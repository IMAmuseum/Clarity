function datasource_management_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {

  $element = array();

  switch($display['type']) {
    case 'dashboard_datasource_formatter':
      foreach($items as $delta => $item) {
        if ($item['dsid']) {
          $ds = _datasource_management_get_datasource($item['dsid']);
          if (is_null($ds)) {
            $element[$delta]['#markup'] = '<span>' . t('None') . '</span>';
          } else {
            $element[$delta]['#markup'] = '<span>' . $ds->label . '</span>';
          }
        }
      }
  }

  return $element;

}


function datasource_management_field_widget_info_alter(&$info) {

  $info['options_select']['field types'][] = 'dashboard_datasource_reference';
  $info['options_buttons']['field types'][] = 'dashboard_datasource_reference';

}


function datasource_management_options_list($field) {

  $datasources = _datasource_management_get_datasources();
  foreach($datasources as $datasource) {
    $options[$datasource->dsid] = $datasource->label;
  }
  return $options;

}


