function datasource_management_form_alter(&$form, &$form_state, $form_id) {

  if (substr($form_id, 0, 15) == 'assignment_form') {

    $ds_info = _datasource_management_get_datasource_for_stat($form['sid']['#value']);
    $ds = new $ds_info->class;

    if ($ds instanceof DatasourceAssignmentIfc) {
      $ds->assignmentFormFields($form, $form_state, $form_id);
    }

    unset($ds);

  }

}


function datasource_management_entity_load($entities, $type) {

  if ($type != 'assignment') return;

  // Sort so that we can make one call per datasource
  $ds_sorted = array();
  foreach ($entities as $assignment) {
    $ds_info = _datasource_management_get_datasource_for_stat($assignment->sid);
    $ds_sorted[$ds_info->class][] = $assignment;
  }

  foreach($ds_sorted as $class => $entities) {

    $ds = new $class;
    if ($ds instanceof DatasourceAssignmentIfc) {
      $ds->onAssignmentLoad($entities);
    }
    unset($ds);

  }

}


function datasource_management_entity_presave($entity, $type) {

  if ($type != 'assignment') return;

  $ds_info = _datasource_management_get_datasource_for_stat($entity->sid);
  $ds = new $ds_info->class;
  if ($ds instanceof DatasourceAssignmentIfc) {
    $ds->onAssignmentPresave($entity);
  }

  unset($ds);

}


function datasource_management_assignment_update($assignment) {

  $ds_info = _datasource_management_get_datasource_for_stat($assignment->sid);
  $ds = new $ds_info->class;
  if ($ds instanceof DatasourceAssignmentIfc) {
    $ds->onAssignmentUpdate($assignment);
  }

  unset($ds);

}


function datasource_management_assignment_insert($assignment) {

  $ds_info = _datasource_management_get_datasource_for_stat($assignment->sid);
  $ds = new $ds_info->class;
  if ($ds instanceof DatasourceAssignmentIfc) {
    $ds->onAssignmentInsert($assignment);
  }

  unset($ds);

}

